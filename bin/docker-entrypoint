#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit 2>/dev/null)
    export LD_PRELOAD
fi

# Railway-specific database setup
if [ -n "$DATABASE_URL" ] && [ "$RAILS_ENV" = "production" ]; then
  echo "ðŸš‚ Railway: Checking database..."
  
  # Wait for database to be ready and run migrations
  echo "Running database migrations..."
  bundle exec rails db:migrate || echo "Migration failed - continuing"
  
  echo "âœ… Database setup complete"
fi

# If running the rails server then prepare database (development/test)
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ] && [ "$RAILS_ENV" != "production" ]; then
  ./bin/rails db:prepare
fi

exec "${@}"
